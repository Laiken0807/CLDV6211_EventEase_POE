@model List<CLDV6211_EventEase_POE.Models.eventease>

@{
    ViewData["Title"] = "EventEase Gallery";
}

<h2>Uploaded Event Images</h2>

<a asp-controller="Home" asp-action="Index" class="btn btn-secondary mb-3">← Back to Home</a>

<div class="event-gallery">
    @foreach (var item in Model)
    {
        <div class="event-card">
            <a href="@item.ImageUrl" target="_blank">
                <h4>@item.Name</h4>
                <img src="@item.ImageUrl" alt="@item.Name" style="max-width: 250px;" />
            </a>
            <p>@item.description</p>
        </div>
    }
</div>

<style>
    .event-gallery {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
        margin-top: 20px;
    }

    .event-card {
        border: 1px solid #ddd;
        padding: 10px;
        width: 250px;
        border-radius: 10px;
        box-shadow: 2px 2px 6px rgba(0,0,0,0.1);
    }

        .event-card img {
            width: 100%;
            border-radius: 8px;
        }
</style>
